<div class="card card-primary card-tabs{{ shadowClass }} mb-3">
    <div class="card-header p-0 pt-1">
        <ul class="nav nav-tabs justify-content-center" id="hltvTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="hltv-tab" data-toggle="tab" href="#hltv" role="tab"
                   aria-controls="hltv"
                   aria-selected="true">HTLV2 Rating</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="adr-tab" data-toggle="tab" href="#ADR" role="tab">ADR</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="kills-tab" data-toggle="tab" href="#kills" role="tab">Kills</a>
            </li>
        </ul>
    </div>
    <div class="card-body">
        <div class="tab-content" id="myStatsContent">
            <div class="tab-pane fade show active" id="hltv" role="tabpanel" aria-labelledby="hltv-tab">
                <div style="height: 300px">
                    <canvas id="hltv-chart" height="300"></canvas>
                </div>
            </div>
            <div class="tab-pane fade" id="ADR" role="tabpanel" aria-labelledby="adr-tab">
                <div style="height: 300px">
                    <canvas id="adr-chart" height="300"></canvas>
                </div>
            </div>
            <div class="tab-pane fade" id="kills" role="tabpanel" aria-labelledby="kills-tab">
                <div style="height: 300px">
                    <canvas id="kills-chart" height="300"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>