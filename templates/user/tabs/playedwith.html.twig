<div class="tab-pane fade" id="mates" role="tabpanel" aria-labelledby="mates-tab">
    <h2>Played With</h2>
    <table class="table table-hover table-responsive">
        <tr>
            <td>Username</td>
            <td>Avatar</td>
            <td>ProfileUrl</td>
            <td>Created</td>
            <td>Last Online</td>
        </tr>
        {% for mate in mates %}
            <tr{% if mate.vacbanned or mate.owbanned %} class="bg-red color-palette"{% endif %}>
                <td><a href="{{ path('user.detail', {'steamid': mate.steamId}) }}">{{ mate.steamusername }}</a></td>
                <td>
                    {% include 'addons/rank.html.twig' with {'rank': mate.rank} %}
                </td>
                <td>{{ mate.playedCount }}x</td>
            </tr>
        {% endfor %}
    </table>
</div>